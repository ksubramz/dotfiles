# Generated by the muttrc builder (http://muttrcbuilder.org/)
# for mutt-1.5.21

set certificate_file = '~/.mutt/certificates'
set folder = 'imaps://mail.nmr.mgh.harvard.edu'
set from = 'krish@nmr.mgh.harvard.edu' # default: '(empty)'
set header_cache = '~/.mutt/cache/headers'
set imap_check_subscribed = yes # default: no
set imap_login = 'krish' # default: '(empty)'
set message_cachedir = '~/.mutt/cache/bodies'
set postponed = '+Drafts'
set realname = 'Krish Subramaniam'
set record = '+Sent Messages'
set smtp_url = 'smtps://krish@smtp.nmr.mgh.harvard.edu:465/'
set ssl_force_tls=yes
set spoolfile = '+INBOX'
set ssl_min_dh_prime_bits = 512 

# headers to show
ignore * # ignore all headers
unignore From: To: CC: Date: Subject: X-mailer: User-Agent: # show only these
hdr_order From: To: CC: Date: Subject: X-mailer: User-Agent: # and in this order

#other options
set include=yes #include the orig msg by default

# Navigation.
macro index,pager gi "<change-folder> +INBOX<enter>" "Go to inbox"
macro index,pager gf "<change-folder> +MailingLists/Freesurfer<enter>" "Go to Freesurfer"
macro index,pager gd "<change-folder> +Notifications/nightly build/dev<enter>" "Go to dev"
macro index,pager gS "<change-folder> +Notifications/nightly build/stable<enter>" "Go to stable"
macro index,pager gC "<change-folder> +Notifications/CVS<enter>" "Go to CVS"
macro index,pager gs "<change-folder> +Sent Messages<enter>" "Go to Sent"

# Vim-like bindings

bind pager / search
bind pager <up> previous-line
bind pager <down> next-line
bind pager k previous-line
bind pager j next-line
bind pager gg top
bind pager G bottom
bind index gg first-entry
bind index G last-entry

# abook
#
set query_command= "abook --mutt-query '%s'"
macro index,pager A "abook --add-email" "add the sender address to abook"
macro generic,index,pager \ca "abook" "launch abook"

# Sidebar
#
#
set sidebar_width=30
set sidebar_delim='|'
color sidebar_new brightred color233

# ctrl-n, ctrl-p to select next, prev folder
# ctrl-o to open selected folder
bind index \CP sidebar-prev
bind index \CN sidebar-next
bind index \CO sidebar-open
bind pager \CP sidebar-prev
bind pager \CN sidebar-next
bind pager \CO sidebar-open

# I don't need these.  just for documentation purposes.  See below.
# sidebar-scroll-up
# sidebar-scroll-down

# Remap bounce-message function to "B"
bind index B bounce-message

#
# Mario Holbe suggests:
macro index b '<enter-command>toggle sidebar_visible<enter><refresh>'
macro pager b '<enter-command>toggle sidebar_visible<enter><redraw-screen>'
#

# Colors
source ~/mutt.zenburn.256
